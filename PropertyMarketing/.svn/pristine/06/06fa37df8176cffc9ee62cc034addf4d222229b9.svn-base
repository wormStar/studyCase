<struts>

    <package name="comment" namespace="/comment" extends="base-struts">
        <action name="*" class="commentController" method="{1}">
            <result name="listPage">/WEB-INF/view/comment/list.jsp</result>
            <result name="userListPage">/WEB-INF/view/comment/user_list.jsp</result>
            <result name="list" type="json"></result>
            <result name="userList" type="json"></result>
            <result name="remove" type="json"></result>
            <result name="update" type="json"></result>
