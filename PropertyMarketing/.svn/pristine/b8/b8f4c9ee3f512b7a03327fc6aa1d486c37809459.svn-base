<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.ht.bean">
    <class name="Ads" table="t_ads">
        <id name="id" column="id">
            <generator class="uuid"/>
        </id>
        <property name="title" column="title"/>
        <property name="content" column="content"/>
        <property name="logo" column="logo"/>
        <property name="adUrl" column="ad_url"/>
        <property name="showStatus" column="show_status"/>
        <property name="showOrder" column="show_order"/>
        <property name="createdTime" column="created_time"/>
        <property name="status" column="status"/>

    </class>
</hibernate-mapping>